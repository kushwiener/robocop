{
  "name": "supreme-bot",
  "version": "0.0.1",
  "manifest_version" : 2,
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "img/icon16.png",
      "24": "img/icon24.png",
      "32": "img/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": [ "https://www.supremenewyork.com/checkout"],
      "js": ["src/checkout.js"]
    },
    {
      "matches": [ "http://www.supremenewyork.com/shop/*"],
      "js": ["src/bot.js"]
    }
  ],
  "options_page": "src/options.html",
  "permissions": [
    "tabs", 
    "http://*/*",
    "storage"
  ]
}