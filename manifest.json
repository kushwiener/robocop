{
  "name": "supreme-bot",
  "version": "0.0.1",
  "manifest_version" : 2,
  "background" : {
    "scripts" : ["src/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },
  "content_scripts" : [
    {
      "matches" : [ "https://www.supremenewyork.com/checkout"],
      "js" : ["src/checkout.js"]
    },
    {
      "matches" : [ "http://www.supremenewyork.com/shop/*"],
      "js" : ["src/bot.js"]
    }
  ],
  "options_page": "src/options.html",
  "permissions": [
    "tabs", 
    "http://*/*",
    "storage"
  ]
}